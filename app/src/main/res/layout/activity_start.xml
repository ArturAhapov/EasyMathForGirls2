<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/board"
        tools:context="com.arturagapov.easymathforgirls.StartActivity">
    <!--Background pictures-->
    <RelativeLayout
            android:id="@+id/background_pictures"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:id="@+id/image_left_top"
                android:src="@drawable/image_left_top"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="200dp" android:layout_height="200dp"/>
        <ImageView
                android:id="@+id/image_left_bottom"
                android:src="@drawable/image_left_bottom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/image_right_top"
                android:src="@drawable/image_right_top"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="200dp" android:layout_height="200dp"/>
        <ImageView
                android:id="@+id/image_right_bottom"
                android:src="@drawable/image_right_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!--Logo-->
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/startlogo"
            android:background="@drawable/shadow_easy_math_logo"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/logo"/>
    <!--Leaderboard-->
    <ImageView
            android:src="@drawable/clouds"
            android:layout_above="@+id/start_activity_bottom"
            android:scaleType="fitEnd"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/start_activity_bottom"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/layout_of_leaderboard"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_above="@+id/game_start"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/start_achievements"
                android:text="@string/achievements"
                android:textColor="@color/colorAzzure"
                android:textSize="@dimen/titleText"
                android:onClick="onClickStartAchievements"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/start_leaderboard"
                android:text="@string/leaderboard"
                android:textColor="@color/colorAzzure"
                android:textSize="@dimen/titleText"
                android:onClick="onClickStartLeaderboard"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
            android:id="@+id/game_start"
            android:text="@string/start_the_game"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="@dimen/titleText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonroundedblue"
            android:layout_above="@+id/login"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:onClick="onClickStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/login"
            android:text="@string/login_in"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="@dimen/titleText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonroundedblue"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
