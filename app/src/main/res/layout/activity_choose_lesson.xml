<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/board"
        android:layout_centerHorizontal="true"
        tools:context="com.arturagapov.easymathforgirls.ChooseLessonActivity">
    <TextView
            android:text="@string/choose_to_continue"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPinkEmpty"
            android:textSize="@dimen/titleText"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

        <GridLayout
                android:id="@+id/grid_for_buttons"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedgreen"
                    android:id="@+id/btn1"
                    android:layout_row="0"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedyellow"
                    android:id="@+id/btn2"
                    android:layout_row="0"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedmagenta"
                    android:id="@+id/btn3"
                    android:layout_row="0"
                    android:layout_column="2"/>

            <!--2nd row-->
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedred"
                    android:id="@+id/btn4"
                    android:layout_row="1"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedblue"
                    android:id="@+id/btn5"
                    android:layout_row="1"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedgreen"
                    android:id="@+id/btn6"
                    android:layout_row="1"
                    android:layout_column="2"/>
            <!--3rd row-->
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedyellow"
                    android:id="@+id/btn7"
                    android:layout_row="2"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedmagenta"
                    android:id="@+id/btn8"
                    android:layout_row="2"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedblue"
                    android:id="@+id/btn9"
                    android:layout_row="2"
                    android:layout_column="2"/>
        </GridLayout>
        <TextView
                android:id="@+id/more"
                android:onClick="onClickMoreBtn"
                android:text="@string/more"
                android:textColor="@color/colorAzzure"
                android:background="@color/colorPinkEmpty"
                android:textSize="@dimen/titleText"
                android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/get_more_btn"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedblue"
                    android:id="@+id/btn10"/>
            <Button
                    android:layout_width="@dimen/choose_lesso_button_width"
                    android:layout_height="@dimen/choose_lesso_button_height"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/buttonroundedred"
                    android:id="@+id/btn0"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
            android:src="@drawable/clouds"
            android:layout_alignParentBottom="true"
            android:scaleType="fitEnd"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>
